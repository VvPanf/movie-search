<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/film_card"
android:layout_width="170dp"
android:layout_height="296dp"
android:layout_marginTop="27dp"
android:layout_marginStart="12dp"
android:background="@drawable/card_bg"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0"
app:layout_constraintVertical_bias="0"
>
<androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/film_guideline_start"
        app:layout_constraintGuide_begin="6dp"
        android:orientation="vertical"
/>
<androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/film_guideline_end"
        app:layout_constraintGuide_end="6dp"
        android:orientation="vertical"
/>
<ImageView
        android:id="@+id/film_image"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        app:srcCompat="@drawable/film1"
        tools:src="@tools:sample/avatars"
        android:scaleType="centerCrop"
        android:background="@drawable/film_mask"
/>
<TextView
        android:id="@+id/film_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        tools:text="@string/age"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_corner"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/film_guideline_start"
        app:layout_constraintEnd_toStartOf="@+id/film_like"
        app:layout_constraintHorizontal_bias="0"
/>
<ImageView
        android:id="@+id/film_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_not_like"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/film_genre"
        app:layout_constraintStart_toEndOf="@+id/film_age"
        app:layout_constraintEnd_toEndOf="@+id/film_guideline_end"
        app:layout_constraintHorizontal_bias="0"
/>
<TextView
        android:id="@+id/film_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="187dp"
        tools:text="@string/first_film_genre"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/film_like"
        app:layout_constraintBottom_toTopOf="@+id/film_image_rating"
        app:layout_constraintStart_toStartOf="@+id/film_guideline_start"
        app:layout_constraintEnd_toEndOf="@+id/film_guideline_end"
        app:layout_constraintHorizontal_bias="0"
/>
<ImageView
        android:id="@+id/film_image_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:srcCompat="@drawable/ic_star_icon_red"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/film_guideline_start"
        app:layout_constraintEnd_toStartOf="@id/film_reviews"
        app:layout_constraintTop_toBottomOf="@id/film_genre"
        app:layout_constraintHorizontal_bias="0"
/>
<TextView
        android:id="@+id/film_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        tools:text="@string/first_film_reviews"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/film_image_rating"
        app:layout_constraintEnd_toEndOf="@+id/film_guideline_end"
        app:layout_constraintBaseline_toBottomOf="@id/film_image_rating"
        app:layout_constraintBottom_toTopOf="@+id/film_title"
        app:layout_constraintHorizontal_bias="0"
/>
<TextView
        android:id="@+id/film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="@string/first_film_title"
        android:textColor="@color/light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/film_guideline_start"
        app:layout_constraintEnd_toEndOf="@+id/film_guideline_end"
        app:layout_constraintTop_toBottomOf="@id/film_genre"
        app:layout_constraintBottom_toTopOf="@id/film_length"
        app:layout_constraintHorizontal_bias="0"
/>
<TextView
        android:id="@+id/film_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        tools:text="@string/first_film_length"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/film_guideline_start"
        app:layout_constraintEnd_toEndOf="@+id/film_guideline_end"
        app:layout_constraintTop_toBottomOf="@id/film_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
/>
</androidx.constraintlayout.widget.ConstraintLayout>